{
  
	"manifest_version": 2,

  
	"name": "Youtube Playlist mp3 Converter",
  
	"description": "This extension simplifies the process of converting a youtube playlist to mp3 files into the press of a button using ytmp3.cc.",
  
	"version": "1.0",

	
	"icons": 
	{ 
		"16" : "icon16.png",
            
		"48" : "icon48.png",
             
		"128": "icon128.png"
  
	},

	
	"content_scripts": 
	[
{
      
		"matches": ["https://www.youtube.com/playlist*"],
      
		"js": ["app.js" , "download.js"],
	    
		"run_at": "document_end"
    
	}
],


	"browser_action": 
	{
    		"default_icon": "icon16.png"
  	},
	"background": 
	{
    		"scripts": ["background.js"]
  	} ,
	"permissions": 
	[
    
		"tabs",
		"activeTab", 
		"https://www.youtube.com/playlist*",
		"https://ytmp3.cc/*",
		"downloads"
	]

}
